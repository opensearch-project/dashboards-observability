    "workflows": [
      {
        "name": "Quick Start",
        "description": "This is a python-client fluent-bit based docker quick starting instructions tutorial with a live example",
        "steps": [
          {
            "name": "Create docker-network",
            "label": "Environment setting",
            "phase": "docker",
            "type": "console-cmd",
            "content": "docker network create opensearch-net",
            "description": "Before running any docker-compose files, create the opensearch-net network"
          },
          {
            "name": "Setup docker .env file",
            "label": "Environment Parameters",
            "phase": "docker",
            "type": "file-url",
            "input-params": [
              {
                "name": "OPENSEARCH_HOST",
                "description": "Opensearch host",
                "type": "host-name"
              },
              {
                "name": "OPENSEARCH_DASHBOARD_HOST",
                "description": "Opensearch Dashboard host",
                "type": "host-name"
              }
            ],
            "info": ["https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/getting-started/.env"],
            "content": "wget https://raw.githubusercontent.com/opensearch-project/opensearch-catalog/main/integrations/observability/python_client/getting-started/.env",
            "description": "Setup docker-compose env variables "
          },
          {
            "name": "Setup fluent-bit folder",
            "label": "Environment Parameters",
            "phase": "docker",
            "type": "file-url",
            "info": ["https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/getting-started/fluent-bit/fluent-bit.conf",
              "https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/getting-started/fluent-bit/parsers.conf"
            ],
            "content": "mkdir -p fluent-bit\nwget -P fluent-bit https://raw.githubusercontent.com/opensearch-project/opensearch-catalog/main/integrations/observability/python_client/getting-started/fluent-bit/fluent-bit.conf \\\n   https://raw.githubusercontent.com/opensearch-project/opensearch-catalog/main/integrations/observability/python_client/getting-started/fluent-bit/parsers.conf\n",
            "description": "Setup docker-compose fluent-bit's service configuration "
          },
          {
            "name": "Setup python app folder",
            "label": "Environment Parameters",
            "phase": "docker",
            "type": "file-url",
            "info": ["https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/getting-started/python-app/Dockerfile",
              "https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/getting-started/python-app/app.py"
            ],
            "content": "mkdir -p python-app\nwget -P python-app https://raw.githubusercontent.com/opensearch-project/opensearch-catalog/main/integrations/observability/python_client/getting-started/python-app/Dockerfile \\\n  https://raw.githubusercontent.com/opensearch-project/opensearch-catalog/main/integrations/observability/python_client/getting-started/python-app/app.py \n",
            "description": "Setup docker-compose golan-app service configuration "
          },
          {
            "name": "Run docker-compose",
            "label": "live container",
            "type": "file-url",
            "phase": "docker",
            "info": ["https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/getting-started/docker-compose.yml"],
            "description": "Run docker-compose for the python-client live example and see the generated index",
            "content": "wget -O docker-compose.yml https://raw.githubusercontent.com/opensearch-project/opensearch-catalog/main/integrations/observability/python_client/getting-started/docker-compose.yml && docker-compose up --build  -d python-app fluent-bit \n"
          }
        ]
      },
      {
        "name": "Python-client",
        "description": "This is a fluent-bit based getting started instructions tutorial",
        "steps": [
          {
            "name": "Import OpenSearch Python Client",
            "type": "code",
            "phase": "setup",
            "label": "Client Import",
            "description": "Import the OpenSearch module from the opensearchpy package",
            "content": "from opensearchpy import OpenSearch"
          },
          {
            "name": "Create Connection to OpenSearch",
            "type": "code",
            "phase": "setup",
            "label": "Connection Establishment",
            "description": "Establish a connection to your OpenSearch cluster by creating an instance of the OpenSearch class. Provide the necessary connection details, such as the host and port.",
            "input-params": [
              {
                "name": "opensearch_host",
                "description": "Hostname or IP address of your OpenSearch server",
                "type": "host-name",
                "default": "localhost"
              },
              {
                "name": "opensearch_port",
                "description": "Port of your OpenSearch server (default is 9200)",
                "type": "port",
                "default": 9200
              }
            ],
            "content": "os = OpenSearch([{'host': 'your_opensearch_host', 'port': 9200}])"
          },
          {
            "name": "Indexing Logs",
            "type": "code",
            "phase": "logging",
            "label": "Log Indexing",
            "description": "Start indexing logs into OpenSearch. Indexing involves adding documents representing your log entries to OpenSearch.",
            "input-params": [
              {
                "name": "index_name",
                "description": "Desired index name in OpenSearch",
                "type": "index-name"
              },
              {
                "name": "timestamp",
                "description": "Timestamp of the log entry",
                "type": "timestamp"
              },
              {
                "name": "level",
                "description": "Log level (e.g., info, error)",
                "type": "log-level"
              },
              {
                "name": "message",
                "description": "Log message",
                "type": "log-message"
              },
              {
                "name": "source",
                "description": "Source of the log entry",
                "type": "source"
              }
            ],
            "content": "log_entry = {\n    'timestamp': '2024-02-05T12:00:00',\n    'level': 'info',\n    'message': 'Your log message here.',\n    'source': 'your_python_project'\n}\n\nindex_name = 'your_index_name'\n\nos.index(index=index_name, body=log_entry)"
          }
        ]
      }
    ],
    "schema": [
      {
        "type": "logs",
        "info": [
          "https://opensearch.org/docs/latest/im-plugin/index-templates"
        ],
        "content": "PUT _index_template/application_logs_template",
        "description": "Setup applicative logs index template in the dev console",
        "index-template": "https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/schemas/applicative-logs-1.0.0.mapping.json",
        "index-pattern-name": "applicative_logs-*"
      }
    ],
    "index-patterns": {
      "type": [
        "logs"
      ],
      "info": [
        "https://opensearch.org/docs/latest/dashboards/management/index-patterns/"
      ],
      "description": "Import index patterns `.ndjson` file to the saved objects",
      "index-pattern": "https://github.com/opensearch-project/opensearch-catalog/blob/main/integrations/observability/python_client/assets/tutorial-1.0.0.ndjson",
      "index-patterns-name": [
        "applicative_logs-*"
      ]
    }
  },
